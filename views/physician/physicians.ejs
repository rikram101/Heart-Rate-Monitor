<% layout('layouts/bootstrap')%>

<div class="container mt-4">
  <h1 class="mb-4">Choose a highly skilled Physician for Yourself</h1>

  <% for (let physician of physicians){%>
  <div class="card mb-4 shadow-sm">
    <div class="row g-0">
      <div class="col-md-4">
        <img
          class="img-fluid rounded-start"
          alt="<%= physician.name %>"
          src="<%=physician.image%>"
          style="width: 100%; height: 250px; object-fit: cover"
        />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= physician.name %></h5>
          <p class="card-text"><%= physician.description %></p>
          <p class="card-text">
            <small class="text-muted"><%= physician.location%></small>
          </p>
          <a class="btn btn-primary" href="/physician/<%=physician._id%>">
            View <%=physician.name%>
          </a>
        </div>
      </div>
    </div>
  </div>
  <% }%>
</div>
