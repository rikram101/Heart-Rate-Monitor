<% layout('layouts/bootstrap')%>

<h1>Choose a highly skilled Physician for Yourself</h1>

<% for (let physician of physicians){%>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" alt="" src="<%=physician.image%>" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= physician.name %></h5>
        <p class="card-text"><%= physician.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= physician.location%></small>
        </p>
        <a class="btn btn-primary" href="/physician/<%=physician._id%>"
          >View <%=physician.name%></a
        >
      </div>
    </div>
  </div>
</div>
<% }%>
