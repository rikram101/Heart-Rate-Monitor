<% layout('layouts/bootstrap')%>
<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="text-primary">Hi there, <b><%= currentUser.name %>!</b></h1>

  <a href="/patient/device/new" class="ml-auto">
    <button type="button" class="btn btn-success btn-lg">
      Add a New Device
    </button>
  </a>
</div>

<hr />
<% for (let device of patient_devices){%>
<div class="card" style="margin: 20px 0">
  <div class="card-header">
    Data readings are taken every <b><%= device.reading_freq %></b> minutes.
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= device.name %></h5>
    <p class="card-text">
      With supporting text below as a natural lead-in to additional content.
    </p>
    <a href="/patient/device/<%= device._id %>" class="btn btn-primary"
      >View Data</a
    >
  </div>
</div>
<% }%>
